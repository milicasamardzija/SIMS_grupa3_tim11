<Window x:Class="Hospital.DeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="DeleteDialog" Height="167.324" Width="413.239" Background="#FFED9CDD">
    <Grid>
        <Label x:Name="label" Content="Are you sure you want to delete this?" HorizontalAlignment="Left" Margin="48,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.113,0.124" Foreground="#FFC91792" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
        <Button x:Name="btnYes" Content="YES" HorizontalAlignment="Left" Margin="48,84,0,0" VerticalAlignment="Top" Width="75" Click="btnYes_Click"/>
        <Button x:Name="btnNo" Content="NO" HorizontalAlignment="Left" Margin="259,84,0,0" VerticalAlignment="Top" Width="75" Click="btnNo_Click"/>

    </Grid>
</Window>
