        <DataGrid
            x:Name="doctorTerms"
            Width="276"
            Height="128"
            Margin="27,188,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="65"
                    Binding="{Binding IdCh}"
                    Header="Id termina" />

                <DataGridTextColumn
                    Width="105"
                    Binding="{Binding Date}"
                    Header="Datum" />
                <DataGridTextColumn
                    Width="40"
                    Binding="{Binding IdRoom}"
                    Header="Soba" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding Duration}"
                    Header="Trajanje" />
            </DataGrid.Columns>
