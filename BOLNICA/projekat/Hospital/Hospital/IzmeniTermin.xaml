<Window x:Class="Hospital.IzmeniTermin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
     Title="Izmeni termin" Height="500" Width="430" WindowStartupLocation="CenterScreen">
    <Grid Background="LightBlue" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="0,0,0,0.4">
            <Grid.RowDefinitions>
                <RowDefinition Height="72*"/>
                <RowDefinition Height="163*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <Label  x:Name="date" Margin="54,138,102,303.4" Foreground="DarkBlue" FontSize="10" Grid.Column="0" Grid.Row="0" FontWeight="Bold" Content="Datum" Grid.RowSpan="2"/>
            <Label Margin="49,131.02,289,165" Foreground="DarkBlue" FontSize="10" FontWeight="Bold" Grid.Row="1">Doktor</Label>
            <TextBox  x:Name="doctorText" HorizontalAlignment="Left" Height="31" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="181" RenderTransformOrigin="1.155,1.912" Margin="180,124.02,0,0" Grid.Row="1"/>
            <Button Margin="85,239.02,259,57" Grid.Column="0" Width="80" Height="30" Background="AliceBlue" Click="add_appointment" Grid.Row="1">Izmeni</Button>
            <Button Margin="205,239.02,139,57"  Width="80" Height="30" Background="AliceBlue" Click="odustani_click" Grid.Row="1">Odustani</Button>

            <ComboBox Name="timeText" SelectedValuePath="Content" HorizontalAlignment="Left" VerticalAlignment="Top" Width="182" Margin="182,54.02,0,0"  Height="28" Grid.Row="1">
                <ComboBoxItem>08:00</ComboBoxItem>
                <ComboBoxItem>08:30</ComboBoxItem>
                <ComboBoxItem>09:00</ComboBoxItem>
                <ComboBoxItem>09:30</ComboBoxItem>
                <ComboBoxItem>10:00</ComboBoxItem>
                <ComboBoxItem>10:30</ComboBoxItem>
                <ComboBoxItem>11:00</ComboBoxItem>


            </ComboBox>
            <Label Content="Vreme" HorizontalAlignment="Left" VerticalAlignment="Top"  Foreground="DarkBlue" FontSize="10" x:Name="time" Margin="52,57.02,0,0" RenderTransformOrigin="0.359,0.616" Grid.Row="1"/>
            <Label Content="ID&#xD;&#xA;" HorizontalAlignment="Left" Margin="56,0,0,58" Height="26" VerticalAlignment="Bottom"/>
            <DatePicker x:Name="dateText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="182,137,0,0" Width="183" Grid.RowSpan="2"/>


        </Grid>
        <TextBox  x:Name="idText"  HorizontalAlignment="Left" Height="27" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="181" Margin="180,66,0,0"/>


    </Grid>
</Window>
