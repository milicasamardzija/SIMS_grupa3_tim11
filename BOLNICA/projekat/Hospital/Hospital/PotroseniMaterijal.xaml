<Window x:Class="Hospital.PotroseniMaterijal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="PotroseniMaterijal" Height="289.559" Width="499.942" Background="#FFED9CDD" WindowStartupLocation="CenterScreen">
    <Grid Margin="28,31,41.6,80.4" ToolTip="Kada zelite da vidite sve podatke u tabeli, krecite se strelicama za gotre ili dole, takodje i za levo ili desno">
        <DataGrid x:Name="Potroseni" Grid.Column="0" Background="MistyRose" AutoGenerateColumns="False" SelectionMode="Single" Margin="0,0,0,-0.2" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="SIFRA"/>
                <DataGridTextColumn Header="NAZIV MATERIJALA"/>
                <DataGridTextColumn Header="KOLICINA"/>
                <DataGridTextColumn Header="GRANICA"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="button1" Content="Dodaj" HorizontalAlignment="Left" Margin="0,182,0,-61.4" Width="79" Click="button1_Click"/>
        <Button x:Name="button2" Content="Izadji" HorizontalAlignment="Left" Margin="345,182,0,-61.4" Width="79" Click="button2_Click"/>
    </Grid>
</Window>
