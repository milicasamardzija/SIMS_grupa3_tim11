<Window x:Class="Hospital.IzvestajLekara"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="IzvestajLekara" Height="343.33" Width="582.425" Background="#FFED9CDD" WindowStartupLocation="CenterScreen">
    <Grid ToolTip="Pritiskajuci strelice oznacite prazna polja i unesite podatke, zatim strelicama izaberite zeljeno dugme i pritisnite tipku Enter da bi se izvrsila zeljena akcija">
