<UserControl x:Class="Hospital.ZakazivanjePremestanjaStatickogInventara"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hospital"
             mc:Ignorable="d" 
             Background="AliceBlue" Height="400" Width="470">
    <Grid>
        <Label Content="Ime" HorizontalAlignment="Left" Margin="17,58,0,0" VerticalAlignment="Top" Height="50" Width="64" FontSize="24" FontWeight="Bold"/>
        <Label Content="Tip" HorizontalAlignment="Left" Margin="17,4,0,0" VerticalAlignment="Top" Height="54" Width="92" FontSize="24" FontWeight="Bold"/>
        <Label Content="Kolicina" HorizontalAlignment="Left" Margin="17,115,0,0" VerticalAlignment="Top" Height="53" Width="110" FontSize="24" RenderTransformOrigin="0.512,0.925" FontWeight="Bold"/>
        <TextBox Name="KolicinaTxt" HorizontalAlignment="Left" Height="40" Margin="180,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244"/>
        <TextBox Name="ImeTxt" HorizontalAlignment="Left" Height="37" Margin="180,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244"/>
        <Button Click="premesti" Background="LightBlue" Content="Premesti" HorizontalAlignment="Left" Margin="43,345,0,0" VerticalAlignment="Top" Width="132" FontSize="24" Height="45" FontWeight="Bold" RenderTransformOrigin="0.347,0.991"/>
        <Button Click="odustani" Background="LightBlue" Content="Odustani" HorizontalAlignment="Left" Margin="278,345,0,0" VerticalAlignment="Top" Width="124" RenderTransformOrigin="1.7,10.906" FontSize="24" Height="45" FontWeight="Bold"/>
        <Label Content="Id prostorije" HorizontalAlignment="Left" Margin="17,173,0,0" VerticalAlignment="Top" Height="53" Width="158" FontSize="24" RenderTransformOrigin="0.512,0.925" FontWeight="Bold"/>
        <TextBox Name="IdSobeTxt"  HorizontalAlignment="Left" Height="39" Margin="180,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244"/>
        <ComboBox Name="TypeTxt" HorizontalAlignment="Left" Margin="180,4,0,0" VerticalAlignment="Top" Width="244" Height="41">
            <ComboBoxItem IsSelected="True">STATICKI</ComboBoxItem>
            <ComboBoxItem IsSelected="True">DINAMICKI</ComboBoxItem>
        </ComboBox>
        <DatePicker Name="DatumTxt" HorizontalAlignment="Left" Margin="180,235,0,0" VerticalAlignment="Top" Width="244" Height="33" RenderTransformOrigin="0.502,1.256"/>
        <Label Content="Datum" HorizontalAlignment="Left" Margin="17,235,0,0" VerticalAlignment="Top" Height="50" Width="92" FontSize="24" FontWeight="Bold" RenderTransformOrigin="0.512,4.592"/>
        <Label Content="Vreme" HorizontalAlignment="Left" Margin="17,283,0,0" VerticalAlignment="Top" Height="50" Width="92" FontSize="24" FontWeight="Bold"/>
        <TextBox Name="VremeTxt" HorizontalAlignment="Left" Height="37" Margin="180,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244"/>
    </Grid>
</UserControl>
