        <TextBox
            x:Name="obavestenjaText"
            Margin="26,116,395,190.6"
         
            IsEnabled="False"
            TextWrapping="Wrap" />
        <Image
            Height="71"
            IsEnabled="False"
            Source="logo-removebg-preview.png" StretchDirection="DownOnly" Margin="507,0,96,314.6" VerticalAlignment="Bottom" />
        <Label
            
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="ZANIMLJIVOSTI"
            FontFamily="Cooper Black"
            FontSize="16"
            Foreground="#FF234EB3" Margin="26,278,0,0" />
        <Label
            Margin="441,140,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Lider u inovaciji, na usluzi pacijenata!"
            FontFamily="Comic Sans MS"
            FontSize="16"
            FontStyle="Italic"
            FontWeight="Bold"
            Foreground="#FF227638" Width="309" />
        <Label Content="OBAVESTENJA ZA SVE ZAPOSLENE " HorizontalAlignment="Left" Margin="26,82,0,0" VerticalAlignment="Top"  FontFamily="Cooper"
