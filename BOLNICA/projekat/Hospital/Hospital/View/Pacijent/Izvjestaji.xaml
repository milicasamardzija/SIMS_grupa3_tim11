<Window x:Class="Hospital.View.Pacijent.Izvjestaji"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.View.Pacijent"
        Title="Izvjestaji" Height="800" Width="800" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="274*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="290*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <DockPanel  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"  Margin="55, 40, 60, 0">
            <Grid DockPanel.Dock="Top" Background="#ff1e243e" MinHeight="70" Height="234" Margin="0,0,0.4,0">

                <ComboBox Name="mjeseci" Margin="376,-116,200,312" FontFamily="Corbel" FontSize="20" VerticalContentAlignment="Center" Foreground="#ff1e243e" BorderBrush="{x:Null}">
                    <ComboBox.Background>
                        <SolidColorBrush Color="#FFA64F4F" Opacity="1"/>
                    </ComboBox.Background>
                </ComboBox>
                <ComboBox Name="godine" Margin="157,-116,418,0" FontFamily="Corbel" FontSize="20" VerticalContentAlignment="Center" Foreground="#ff1e243e" BorderBrush="{x:Null}" Height="38" VerticalAlignment="Top">
                    <ComboBox.Background>
                        <SolidColorBrush Color="#FFA64F4F" Opacity="1"/>
                    </ComboBox.Background>
                </ComboBox>
            </Grid>


        </DockPanel>

        <Button Grid.Column="1" Grid.Row="1" Name="btnGenerisi" Width="200" Height="50" Foreground="#ff1e243e" Background="#ffd84d4d" FontFamily="Corbel" FontSize="20" FontWeight="Bold" Margin="0, 20, 0, 0" Click="Button_Click">Generiši PDF izveštaj</Button>


    </Grid>
</Window>
