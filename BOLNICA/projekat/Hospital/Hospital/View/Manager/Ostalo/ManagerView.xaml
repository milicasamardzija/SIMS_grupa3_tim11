                    <ImageBrush
                        AlignmentX="Left"
                        ImageSource="/Hospital;component/View/Images/Manager/pill-32.png" Stretch="None" TileMode="FlipXY" />
                </MenuItem.Background>
            </MenuItem>
            <GridSplitter Background="#FF373434" Height="42" Width="5"/>
            <MenuItem Header="      OBAVESTENJA" FontSize="22"
                      FontWeight="Bold"
                      TextElement.Foreground="#FF373434" Click="obavestenja" >
                <MenuItem.Background>
                    <ImageBrush
                    AlignmentX="Left"
                    ImageSource="/Hospital;component/View/Images/Manager/message-32.png" Stretch="None" TileMode="FlipXY" />
            </MenuItem.Background>
            </MenuItem>
            <GridSplitter Background="#FF373434" Height="42" Width="5"/>
        </Menu>
        <Frame Name="frame" Background="#FFDFD7BB" HorizontalAlignment="Left" Margin="0,40,-6.4,-0.4" VerticalAlignment="Top" Height="626" Width="1280" NavigationUIVisibility="Hidden" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" />
    </Grid>
</Window>
