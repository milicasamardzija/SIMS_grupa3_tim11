             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hospital"
             mc:Ignorable="d" 
              Height="401" Width="470" Background="#FFDFD7BB">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Foreground="#FF373434" Margin="22,100,10.4,0" TextWrapping="Wrap" Text="Da li ste sigurni da zelite da dodate selektovani lek u bazu lekova bolnice?" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Height="137" Width="438"/>
