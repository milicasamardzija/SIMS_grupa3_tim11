            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Background="#FFFFC800" Foreground="#FF373434" Content="Odustani" HorizontalAlignment="Left" Margin="302,280,0,0" VerticalAlignment="Top" Width="122" FontWeight="Bold" FontSize="20" Height="57" RenderTransformOrigin="1.452,0.637" Click="odustani">
