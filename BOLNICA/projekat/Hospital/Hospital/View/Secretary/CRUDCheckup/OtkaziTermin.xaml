<Window x:Class="Hospital.Sekretar.OtkaziTermin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Sekretar"
        mc:Ignorable="d"
        Title="OtkaziTermin" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0" Color="Gray" />
                <GradientStop Offset="1" Color="White" />
                <GradientStop Offset="0.094" Color="#FF2BACC5" />
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Da li ste sigurni da zelite da otkazete termin?" HorizontalAlignment="Left" Margin="26,30,0,0" VerticalAlignment="Top"/>
        <Button Content="Da" HorizontalAlignment="Left" Margin="161,97,0,0" VerticalAlignment="Top" Width="75" Click="YesBtn" Cursor="Hand" />
        <Button Content="Ne" HorizontalAlignment="Left" Margin="44,97,0,0" VerticalAlignment="Top" Width="75" Click="NoBtn" Cursor="Hand"/>
    </Grid>
</Window>
