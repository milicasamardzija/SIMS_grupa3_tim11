        <DataGrid
            x:Name="doctorTerms"
            Width="249"
            Height="128"
            Margin="27,170,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            Foreground="Transparent"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            TextElement.Foreground="#FF1B4C93">
            <DataGrid.Columns>



                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Date}"
                    Header="Datum" />
                <DataGridTextColumn
                    Width="65"
                    Binding="{Binding IdRoom}"
                    Header="Soba" />
                <DataGridTextColumn
                    Width="75"
                    Binding="{Binding Duration}"
                    Header="Trajanje" />
            </DataGrid.Columns>
        </DataGrid>
        <Label
            Width="74"
            Height="26"
            Margin="30,88,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Soba"
            FontWeight="Bold"
            Foreground="#FF1B4C93" />
        <Label
            Width="163"
            Height="26"
            Margin="29,139,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Svi zauzeti termini lekara:"
            FontWeight="Bold"
            Foreground="#FF1B4C93" />
        <ComboBox
            Name="listRooms"
            Width="120"
            Height="29"
            Margin="97,88,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            Width="75"
            Height="32"
            Margin="201,308,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="SaveCheckup"
            Content="     Sacuvaj"
            FontWeight="Bold"
            Foreground="#FF1B4C93">
            <Button.Background>
                <ImageBrush
                    AlignmentX="Left"
                    ImageSource="/Hospital;component/View/Images/Actions-dialog-ok-apply-icon.png"
                    Stretch="None" />
            </Button.Background>
        </Button>
        <Button
            Width="77"
            Height="32"
            Margin="29,308,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Decline"
            Content="       Odustani"
            FontWeight="Bold"
            Foreground="#FF1B4C93">
            <Button.Background>
                <ImageBrush
                    AlignmentX="Left"
                    ImageSource="/Hospital;component/View/Images/arrow-left-small.png"
                    Stretch="None" />
            </Button.Background>
        </Button>
        <ComboBox
            Name="selectedTime"
            Width="120"
            Height="29"
            Margin="97,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
