        <Label
            Width="53"
            Height="26"
            Margin="27,14,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Datum"
            FontWeight="Bold"
            Foreground="#FF1B4C93" />
        <DatePicker
            Name="date"
            Width="120"
            Height="29"
            Margin="97,15,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Focusable="False"
            ToolTip="Odaberi datum koji nije zauzet" />
        <Label
            Width="51"
            Height="26"
            Margin="29,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Vreme"
            FontWeight="Bold"
            Foreground="#FF1B4C93" />
