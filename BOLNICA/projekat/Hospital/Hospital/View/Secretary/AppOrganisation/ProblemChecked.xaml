<UserControl
    x:Class="Hospital.View.Secretary.AppOrganisation.ProblemChecked"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hospital.View.Secretary.AppOrganisation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="692"
    mc:Ignorable="d">
    <Grid>
        <Label
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Opis problema:"
            FontWeight="Bold"
            Foreground="#FF1B4C93" />
        <TextBox
            Width="542"
            Height="53"
            Margin="150,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Label
            Margin="0,67,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Unesite mail za povratnu informaciju o prijavi problema:"
            FontWeight="Bold"
            Foreground="#FF1B4C93" />
        <TextBox
            x:Name="email"
            Width="334"
            Height="23"
            Margin="358,70,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>
