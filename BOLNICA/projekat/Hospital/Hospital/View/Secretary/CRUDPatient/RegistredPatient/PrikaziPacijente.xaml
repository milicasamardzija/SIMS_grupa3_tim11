<Window
    x:Class="Hospital.PrikaziPacijente"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hospital"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Prikazi sve registrovane pacijente"
    Width="450"
    Height="400"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0" Color="Gray" />
                <GradientStop Offset="1" Color="White" />
                <GradientStop Offset="0.094" Color="#FF2BACC5" />
            </LinearGradientBrush>
        </Grid.Background>

        <DataGrid
            x:Name="PrikazPacijenata"
            Width="392"
            Height="260"
            Margin="20,44,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            Background="#FFF0F0F0"
            Foreground="#FF114C9F"
            ItemsSource="{Binding Path=listPatient}"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            SelectionChanged="PrikazPacijenata_SelectionChanged"
            TextElement.FontFamily="Chooper Black"
            TextElement.FontSize="12"
            TextElement.Foreground="#FF0852AE"
            ToolTip="Oznacite pacijenta i kliknite na zeljenu akciju">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="115"
                    Binding="{Binding Name}"
                    Header="Ime" />
                <DataGridTextColumn
                    Width="115"
                    Binding="{Binding Surname}"
                    Header="Prezime" />
                <DataGridTextColumn
                    Width="160"
                    Binding="{Binding Jmbg}"
                    Header="Jmbg" />
            </DataGrid.Columns>
        </DataGrid>
        <Button
            Width="80"
            Height="32"
            Margin="121,324,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="izmeniNalogPacijenta"
            Content="     Izmeni "
            Cursor="Hand"
            FontSize="16"
            FontWeight="Bold"
            Foreground="#FF0852AE"
            TextElement.FontSize="14">
            <Button.Background>
                <ImageBrush
                    AlignmentX="Left"
                    ImageSource="/Hospital;component/View/Images/edit-icon.png"
                    Stretch="None" />
            </Button.Background>
        </Button>
        <Button
            Width="82"
            Height="32"
            Margin="329,324,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="izbrisiNalogPacijenta"
            Content="    Izbrisi"
            Cursor="Hand"
            FontSize="16"
            FontWeight="Bold"
            Foreground="#FF0852AE"
            TextElement.FontSize="14">
            <Button.Background>
                <ImageBrush
                    AlignmentX="Left"
                    ImageSource="/Hospital;component/View/Images/delete-icon2.png"
                    Stretch="None" />
            </Button.Background>
        </Button>
        <Button
            Width="85"
            Height="32"
            Margin="223,324,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="addAlergents"
            Content="     Alergeni"
            FontWeight="Bold"
            Foreground="#FF0852AE"
            TextElement.FontSize="14"
            ToolTip="Dodavanje/brisanje i pregled alergena">
            <Button.Background>
                <ImageBrush
                    AlignmentX="Left"
                    ImageSource="/Hospital;component/View/Images/Extras-folder-important-icon.png"
                    Stretch="None" />
            </Button.Background>
        </Button>
        <Button
            Width="75"
            Height="32"
            Margin="20,324,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="CancelBtn"
            Content="   Izadji"
            Cursor="Hand"
            FontWeight="Bold"
            Foreground="#FF0852AE"
            TextElement.FontSize="14">
            <Button.Background>
                <ImageBrush
                    AlignmentX="Left"
                    ImageSource="/Hospital;component/View/Images/arrow-left-small.png"
                    Stretch="None" />
            </Button.Background>
        </Button>
        <Label
            Margin="20,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Pronadji pacijenta:"
            FontSize="14"
            FontWeight="Bold"
            Foreground="#FF0852AE" />

        <StackPanel
            Width="254"
            Height="27"
            Margin="0,10,32,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <StackPanel.Background>
                <ImageBrush
                    AlignmentX="Right"
                    ImageSource="/Hospital;component/View/Images/Search-icon.png"
                    Stretch="None" />

            </StackPanel.Background>
            <TextBox
                x:Name="pretraga"
                Height="27"
                Background="Transparent"
                BorderBrush="#FF08316B"
                Text=""
                TextWrapping="Wrap" />
        </StackPanel>







    </Grid>
</Window>
