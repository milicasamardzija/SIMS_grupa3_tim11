<Window
    x:Class="Hospital.View.Secretary.DoctorShiftAndVacation.OtvoriGodisnji"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hospital.View.Secretary.DoctorShiftAndVacation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Otvori godisnji"
    Width="500"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0" Color="Gray" />
                <GradientStop Offset="1" Color="White" />
                <GradientStop Offset="0.094" Color="#FF2BACC5" />
            </LinearGradientBrush>
        </Grid.Background>
        <Label
            Margin="32,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Lekar: "
            FontSize="15"
            RenderTransformOrigin="0.497,0.204"
            TextElement.FontWeight="Bold"
            TextElement.Foreground="#FF0852AE" />

        <Label
            Margin="32,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Datum pocetka:"
            FontSize="15"
            TextElement.FontWeight="Bold"
            TextElement.Foreground="#FF0852AE" />
        <DataGrid
            x:Name="lekari"
            Width="367"
            Height="137"
            Margin="95,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            ItemsSource="{Binding sviLekari}"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Name}"
                    Header="Ime" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Surname}"
                    Header="Prezime" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Type}"
                    Header="Specijalizacija" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Id}"
                    Header="Id" />
            </DataGrid.Columns>
        </DataGrid>
        <DatePicker
            Name="datumOd"
            Width="166"
            Height="30"
            Margin="172,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.476,1.16" />
        <Label
            Margin="32,264,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Datum kraja:"
            FontSize="15"
            TextElement.FontWeight="Bold"
            TextElement.Foreground="#FF0852AE" />
        <DatePicker
            Name="datumDo"
            Width="166"
            Margin="172,268,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            Width="88"
            Height="40"
            Margin="359,353,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Zakazi"
            Content="Zakazi"
            FontSize="15"
            TextElement.FontWeight="Bold"
            TextElement.Foreground="#FF0852AE" />
        <Button
            Width="81"
            Height="40"
            Margin="32,353,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="izadji"
            Content="Izadji"
            FontSize="15"
            TextElement.FontWeight="Bold"
            TextElement.Foreground="#FF0852AE" />
    </Grid>
</Window>
